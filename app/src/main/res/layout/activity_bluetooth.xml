<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothActivity">

    <Button
        android:id="@+id/search_device_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/connect_device_button"
        android:text="SEARCH"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/connect_device_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_device_button"
        android:text="CONNECT"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"/>

    <ListView
        android:id="@+id/listViewBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_device_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>